<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_1"
        android:layout_width="414dp"
        android:layout_height="247dp"
        android:layout_marginLeft="-3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundimage" />

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/prof_im"
        android:src="@drawable/user_photo"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/prof_im"
        android:fontFamily="@font/marmelad_regular"
        android:text="Валерия"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/prof_im"
        android:layout_below="@id/nameText"
        android:fontFamily="@font/marmelad_regular"
        android:text="lera.smirnova.05@mail.ru"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        />






    <TextView
        android:id="@+id/exit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/marmelad_regular"
        android:text="@string/exit"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/creatVoice"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/round_blue"
        android:gravity="center"
        android:text="Создать голосование"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/profileRename"
        android:layout_width="54dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/icon_menu" />

    <TextView
        android:id="@+id/yearProfile"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailText"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/prof_im"
        android:text="2005"
        android:textColor="@color/white_text" />

</RelativeLayout>