<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.GivingVoiceActivity">

    <TextView
        android:id="@+id/giving"
        android:layout_width="233dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Голосуем за:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/butZa"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_marginStart="56dp"
        android:background="@drawable/round_blue"
        android:gravity="center"
        android:text="За"
        android:textColor="@color/white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersVoice" />

    <TextView
        android:id="@+id/butProtiv"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/round_blue"
        android:gravity="center"
        android:text="Против"
        android:textColor="@color/white_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersVoice" />

    <TextView
        android:id="@+id/usersVoice"
        android:layout_width="250dp"
        android:layout_height="89dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giving" />

    <TextView
        android:id="@+id/usersZa"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersVoice" />

    <TextView
        android:id="@+id/usersProtiv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="96dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersVoice" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проголосовать"
        app:layout_constraintBottom_toTopOf="@+id/butZa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usersZa" />
</androidx.constraintlayout.widget.ConstraintLayout>